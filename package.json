{
  "name": "@windingtree/org.id",
  "version": "3.0.0",
  "description": "ORGiD is Decentralized Identifier (DID) Protocol for Organizations",
  "license": "GPL-3.0-only",
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "types": "typechain/index.ts",
  "scripts": {
    "test": "npx hardhat test",
    "test:opt": "npx hardhat --network optimismLocalhost test",
    "lint": "npx solhint contracts/*.sol",
    "compile": "npx hardhat compile",
    "build": "yarn compile",
    "coverage": "npx hardhat coverage --testfiles \"test/**/*.spec.ts\"",
    "coverage:coveralls": "yarn coverage && cat coverage/lcov.info | npx coveralls",
    "node:opt": "docker-compose -f optimism/ops/docker-compose-nobuild.yml up -t 60",
    "deploy:ropsten": "npx senv ./arbRinkeby.senv \"npx hardhat --network ropsten deploy\"",
    "deploy:arb:rinkeby": "npx senv ./arbRinkeby.senv \"npx hardhat --network arbitrumRinkeby deploy\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/windingtree/org.id"
  },
  "keywords": [
    "orgid",
    "winding tree",
    "smart contract",
    "solidity",
    "typescript"
  ],
  "author": "Winding Tree Developers <dev@windingtree.com>",
  "contributors": [
    "Kostiantyn Smyrnov <kostysh@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/windingtree/org.id/issues"
  },
  "homepage": "https://github.com/windingtree/org.id/tree/master#readme",
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "4.3.2"
  },
  "devDependencies": {
    "@types/node": "16.9.4",
    "@types/mocha": "9.0.0",
    "@types/chai": "4.2.21",
    "ethereum-waffle": "3.4.0",
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@nomiclabs/hardhat-etherscan": "2.1.6",
    "@eth-optimism/hardhat-ovm": "0.2.3",
    "@openzeppelin/hardhat-upgrades": "1.10.0",
    "ts-node": "10.2.1",
    "ethers": "5.4.7",
    "solhint": "3.3.6",
    "chai": "4.3.4",
    "hardhat": "2.6.4",
    "typescript": "4.4.3",
    "solc": "0.8.7-fixed",
    "solidity-coverage": "0.7.17",
    "coveralls": "3.1.1",
    "typechain": "5.1.2",
    "@typechain/hardhat": "2.3.0",
    "@typechain/ethers-v5": "7.1.0",
    "@windingtree/secure-env-cli": "1.0.3"
  },
  "engines": {
    "node": ">=12"
  }
}
